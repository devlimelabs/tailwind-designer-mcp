{
  "collections": [
    {
      "collectionId": "users",
      "operations": ["read", "query"],
      "conditions": [
        {
          "field": "role",
          "operator": "==",
          "value": "public"
        }
      ]
    },
    {
      "collectionId": "posts",
      "operations": ["read", "write", "query", "delete"],
      "conditions": [
        {
          "field": "visibility",
          "operator": "==",
          "value": "public"
        }
      ]
    }
  ],
  "defaultAllow": false
}